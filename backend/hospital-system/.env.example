# Database Configuration
DATABASE_URL=postgresql://postgres:your_password_here@localhost/hospital_db

# Server Configuration
SERVER_PORT=8001

# External API URLs
POLICE_API_URL=http://localhost:8000

# Security - API Authentication
API_KEY=generate_secure_key_min_32_chars_here
ALLOWED_SERVICE_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# TLS Configuration (Production)
# Generate self-signed certificate for testing:
#   openssl req -x509 -newkey rsa:4096 -nodes -keyout key.pem -out cert.pem -days 365 -subj "/CN=localhost"
# Production: Use certificates from Let's Encrypt or your CA
ENABLE_TLS=false
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60