# Database Configuration
DATABASE_URL=postgresql://postgres:your_password_here@localhost/hospital_db

# Server Configuration
SERVER_PORT=8001

# External API URLs
POLICE_API_URL=http://localhost:8000

# CORS Configuration
# Development: Comma-separated list of allowed origins (HTTP localhost)
# Production: HTTPS URLs only, no localhost
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000,http://127.0.0.1:8000,http://127.0.0.1:3000
# Production example:
# ALLOWED_ORIGINS=https://police.example.com,https://frontend.example.com

# Security - API Authentication
# This key is used to validate requests FROM the police system TO this hospital system
# Generate with: openssl rand -hex 32
API_KEY=generate_secure_key_min_32_chars_here_replace_this_value

# TLS Configuration (Production)
# Generate self-signed certificate for testing:
#   openssl req -x509 -newkey rsa:4096 -nodes -keyout key.pem -out cert.pem -days 365 -subj "/CN=localhost"
# Production: Use certificates from Let's Encrypt or your CA
ENABLE_TLS=false
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60