# Database Configuration
# SECURITY WARNING: Never commit .env to version control
# Production: Use secret management service (AWS Secrets Manager, HashiCorp Vault)
DATABASE_URL=postgresql://postgres:your_password_here@localhost/police_db

# Server Configuration
SERVER_PORT=8000

# TLS Configuration (Production)
# Generate self-signed certificate for testing:
#   openssl req -x509 -newkey rsa:4096 -nodes -keyout key.pem -out cert.pem -days 365 -subj "/CN=localhost"
# Production: Use certificates from Let's Encrypt or your CA
ENABLE_TLS=false
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem

# External API URLs
HOSPITAL_API_URL=https://hospital.internal.domain
HOSPITAL_ORIGIN=https://hospital.internal.domain

# CORS Configuration
# Development: Comma-separated list of allowed origins (HTTP localhost)
# Production: HTTPS URLs only, no localhost
ALLOWED_ORIGINS=http://localhost:8001,http://localhost:3000,http://127.0.0.1:8001,http://127.0.0.1:3000
# Production example:
# ALLOWED_ORIGINS=https://hospital.example.com,https://frontend.example.com

# API Security - Inter-System Authentication
# This key is used by the hospital system to authenticate requests TO this police system
# The police system validates incoming requests using this key
# Generate with: openssl rand -hex 32
API_KEY=your_secure_api_key_here_min_32_chars_replace_this_value

# This key is used by the police system to authenticate requests TO the hospital system
# The police system sends this key when making requests to hospital endpoints
# Generate with: openssl rand -hex 32
HOSPITAL_API_KEY=your_secure_api_key_here_min_32_chars_replace_this_value

# Rate Limiting - General Endpoints (IP-based)
RATE_LIMIT_PER_SECOND=10
RATE_LIMIT_BURST=20

# Rate Limiting - Shared API Endpoints (per API key)
# These limits apply to /api/shared/* endpoints which require API key authentication
# Stricter limits help prevent abuse from authenticated systems
SHARED_API_RATE_LIMIT_PER_SECOND=1
SHARED_API_RATE_LIMIT_BURST=5