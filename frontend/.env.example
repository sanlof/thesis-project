# Backend API URLs
# These should match the ports your Rust backend services are running on
VITE_POLICE_API_URL=http://localhost:8000
VITE_HOSPITAL_API_URL=http://localhost:8001

# Polling interval for data refresh (milliseconds)
# Set to 5000 (5 seconds) for development
# Increase for production to reduce server load
VITE_POLL_INTERVAL=5000

# Debug mode - enables additional console logging
# Set to true during development, false in production
VITE_DEBUG_MODE=false

# API Request Timeout (milliseconds)
VITE_API_TIMEOUT=10000

# Enable/disable features
VITE_ENABLE_CROSS_SYSTEM_QUERY=true
VITE_ENABLE_FLAG_SYNC=true
VITE_ENABLE_REAL_TIME_UPDATES=true
